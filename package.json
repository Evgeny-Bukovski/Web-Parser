{
  "name": "Apollo-Angular",
  "version": "1.0.0",
  "description": "Apollo server + Angular2 app",
  "main": "index.js",
  "scripts": {
    "start-server": "nodemon server/index.js --watch api --exec babel-node",
    "start-client": "webpack-dev-server -d --hot --inline --no-info --port 3000",
    "start": "concurrently \"npm run start-server\" \"npm run start-client\"",
    "lint": "eslint server/api client/ui",
    "test": "mocha --compilers js:babel-core/register --reporter spec --full-trace 'server/**/*.test.js'",
    "seed": "knex seed:run",
    "migrate": "knex migrate:latest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/it-efrem/Apollo-Angular"
  },
  "author": "it-efrem",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.8.0",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "chai": "^3.5.0",
    "concurrently": "^2.1.0",
    "css-loader": "^0.23.1",
    "eslint": "^2.11.1",
    "eslint-config-airbnb": "^9.0.1",
    "eslint-plugin-import": "^1.8.1",
    "eslint-plugin-jsx-a11y": "^1.2.2",
    "eslint-plugin-react": "^5.1.1",
    "html-webpack-plugin": "^2.17.0",
    "mocha": "^2.4.5",
    "nodemon": "^1.9.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.13.0",
    "webpack-dev-server": "^1.14.1"
  },
  "dependencies": {
    "@angular/core": "^2.0.0-rc.1",
    "@angular/platform-browser-dynamic": "^2.0.0-rc.1",
    "@angular/router-deprecated": "^2.0.0-rc.1",
    "angular2-apollo": "^0.1.0",
    "apollo-client": "^0.3.12",
    "apollo-server": "^0.1.1",
    "body-parser": "^1.15.1",
    "classnames": "^2.2.5",
    "connect-session-knex": "^1.0.23",
    "cookie-parser": "^1.4.1",
    "dataloader": "^1.2.0",
    "dotenv": "^2.0.0",
    "express": "^4.13.4",
    "express-session": "^1.13.0",
    "json-loader": "^0.5.4",
    "knex": "^0.20.11",
    "lodash": "^4.12.0",
    "node-emoji": "^1.3.0",
    "passport": "^0.3.2",
    "passport-github": "^1.1.0",
    "redux": "^3.5.2",
    "reflect-metadata": "^0.1.3",
    "request-promise": "^3.0.0",
    "sqlite3": "^3.1.4",
    "whatwg-fetch": "^1.0.0",
    "zone.js": "^0.6.12"
  }
}
